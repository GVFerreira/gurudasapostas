<main>
    <section class="mt-5">
        <div class="container pt-5">
            <div class="card-header rounded-top">
                <h1 class="p-0">Notícias recentes</h1>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        {{#each postagens}}
                            <div class="col-4">
                                <div class="article w-100" style="background: url(https://storage.googleapis.com/uploads-node/{{imgPostagem}}) no-repeat center center; background-size: cover;">
                                    <div class="overlap">
                                        <div class="scale">
                                            <small class="small my-0 py-0">{{#formatDate createdAt}}{{/formatDate}}</small>
                                            <h2 class="py-0 my-0 h5">{{tituloPostagem}}</h2>
                                            <a href="blog/postagem/{{_id}}"><button class="btn btn-primary mt-2">Leia mais +</button></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{else}}
                            <h4 class="text-center">Não existe postagens a serem exibidas</h4>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script> /*FlyingPages*/
  window.addEventListener("load", () => {
    flyingPages({
      delay: 1,
      maxRPS: 3,
      hoverDelay: 50
    });
  });
</script>

