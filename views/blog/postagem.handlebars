<style>
    iframe{
        width: 80%;
        height: 400px;
    }

    @media(max-width: 1200px) {
        iframe{
            height: 340px;
        }
    }
    @media(max-width: 992px) {
        #content {
            flex-wrap: wrap;
        }

        #content aside {
            width: 100%;
            position: unset !important;
            margin: 1rem 0;
        }
        #content .col-sm-9 {
            width: 100%;
        }
    }

    @media(max-width: 768px) {
        iframe{
            width: 100%;
            height: 250px;
        }
    }

    @media(max-width: 500px) {
        iframe{
            height: 180px;
        }
    }

    @media(max-width: 375px) {
        iframe{
            height: 140px;
        }
    }

    header{
        background: #3E7A96 !important;
    }

    main {
        padding-top: 70px;
    }

    .aside button {
        width: 100%;
    }

    .col .card{
        padding: 25px 35px
    }

    .box-logo img {
        border-radius: 5px;
        margin: 0 0 25px 0;
    }

    aside {
        position: sticky;
        top: 120px;
        left: 0;
    }

</style>

<main class="container my-5">
    {{#postagem}}
        <div class="row d-flex align-items-start" id="content">

            <aside class="col-sm-3 mt-sm-5">
                <div class="card">
                    <div class="card-body d-flex align-itens-center flex-column">
                        <div class="d-flex justify-content-center box-logo">
                            <img src="https://storage.googleapis.com/uploads-node/{{cassinoPostagem.imgCassino}}" width="150px" class="align-center">
                        </div>
                        <div>
                            <ul>
                                <li><img src="../../img/check.svg" alt="" class="checkIcon" width="20px"><span class="mb-0 px-2">{{cassinoPostagem.adjCassino1}}</span></li>
                                <li><img src="../../img/check.svg" alt="" class="checkIcon" width="20px"><span class="mb-0 px-2">{{cassinoPostagem.adjCassino2}}</span></li>
                                <li><img src="../../img/check.svg" alt="" class="checkIcon" width="20px"><span class="mb-0 px-2">{{cassinoPostagem.adjCassino3}}</span></li>
                            </ul>
                        </div>
                        <div class="aside">
                            <a href="{{linkCassino}}" target="_blank"> <button class="btn btn-success">abrir {{cassinoPostagem.nomeCassino}} ></button> </a>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    {{{topicoPostagem}}}
                </div>
            </aside>

            <div class="col-sm-9 mt-sm-5">
                <div class="card">
                    <div class="card-body">
                        <div id="infoAnalise">
                            <p class="h6"><a href="/blog" class="text-light">Blog</a> > {{categoriaPostagem.nomeCategoria}} > {{tituloPostagem}} </p>
                            <p class="small">Data de publicação: {{#formatDate createdAt}}{{/formatDate}}</p>
                            <h4 class="d-block h2 mt-4">{{tituloPostagem}}</h4>
                        </div>
                        <div class="mt-5">
                            {{{conteudoPostagem}}}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    {{else}}
    

    
    {{/postagem}}
</main>