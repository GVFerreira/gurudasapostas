<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
  }

  #menuB {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #FFF;
    height: 110px
  }

  #nav ul {
    display: flex;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  #nav ul li {
    display: flex;
    align-items: center;
  }

  #nav li a {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    color: #FFF;
    text-decoration: none;
  }

  #nav li img {
    margin: 0 10px 0 0;
  }

  #nav li p {
    margin: 0;
    font-size: 1.1rem;
  }

  #nav #btn-mobile {
    display: none;
  }

  @media(max-width: 991px) {
    #nav #menu {
      display: block;
      position: absolute;
      width: 60%;
      top: 110px;
      right: 6.5rem;
      background: #6eb85bf5;
      z-index: 2000;
      transition: .4s;
      visibility: hidden;
      overflow-y: hidden;
      border-radius: 0 0 5px 5px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }

    #nav #menu #lista ul {
      display: block;
      margin: 2rem;
    }

    #nav #menu #lista ul li a {
      margin: 1.5rem 0;
    }

    #nav #menu #lista ul li {
      align-items: flex-end;
    }

    #nav #menu #lista ul li a img {
      margin: 0 12px 0 0;
    }

    #nav.active #menu {
      visibility: visible;
    }

    #nav #btn-mobile {
      display: flex;
      flex-direction: column;
      gap: .5rem;
      padding: .5rem .8rem;
      cursor: pointer;
      background: none;
      border: 1px solid #e0e0e0;
      border-radius: 5px;
    }

    #nav #btn-mobile #hamburguer {
      box-sizing: content-box;
      width: 20px;
      border-top: 2px solid #FFF;
    }

    #nav #btn-mobile #hamburguer::before {
      content: '';
      display: block;
      width: 20px;
      height: 2px;
      margin: .4rem 0;
      background: #FFF;
      transition: .3s;
      position: relative;
    }

    #nav #btn-mobile #hamburguer::after {
      content: '';
      display: block;
      width: 20px;
      height: 2px;
      background: #FFF;
      transition: .3s;
      position: relative;
    }

    #nav.active #btn-mobile #hamburguer {
      border-top-color: transparent
    }

    #nav.active #btn-mobile #hamburguer::before {
      transform: rotate(135deg);
    }

    #nav.active #btn-mobile #hamburguer::after {
      transform: rotate(-135deg);
      top: -10px
    }

  }

  @media(max-width: 768px) {
    #nav.active #menu {
      width: 100%;
      right: 0
    }

    #nav.active #btn-mobile #hamburguer::after {
      top: -10px
    }
  }

  @media(max-width: 425px) {
    #nav.active #btn-mobile #hamburguer::after {
      transform: rotate(-135deg);
      top: -10px
    }
  }

  @media(max-width: 375px) {
    #nav.active #btn-mobile #hamburguer::after {
      transform: rotate(-135deg);
      top: -10px
    }
  }

  @media(max-width: 320px) {
    #nav #menu #lista ul {
      margin: 1.5rem 0;
    }

    #nav #menu #lista ul li a {
      margin: 1rem 0;
    }

    #nav.active #btn-mobile #hamburguer::after {
      transform: rotate(-135deg);
      top: -10px
    }
  }

</style>

