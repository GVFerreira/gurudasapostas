<script>
  const btnMobile = document.getElementById('btn-mobile')

  function toggleMenu() {
    const nav = document.getElementById('nav')
    nav.classList.toggle('active')
  }

  btnMobile.addEventListener('click', toggleMenu)
</script>

<script>
  function esconderMenu() {
    let header = document.getElementById('header')
    let menu = document.getElementById('menuB')
    let logo = document.getElementById('logoGuru')
    let menuAltura = document.querySelector('#menu')
    let rolagem = window.scrollY

    if (rolagem > 110) {
        header.style.background = '#3E7A96'
        header.style.height = '70px'
        menu.style.height = '70px'
        logo.style.width = '80%'
        menuAltura.style.top = '70px'

    } else {
        header.style.background = '#3E7A9600'
        header.style.height = '110px'
        menu.style.height = '110px'
        logo.style.width = '100%'
        menuAltura.style.top = '110px'
    }
  }

  window.addEventListener('scroll', esconderMenu)

</script>