<style>
    iframe{
        width: 80%;
        height: 400px;
    }

    header {
        background: #3E7A96 !important;
    }

    .btn-abrir button {
        width: 100%;
    }

    .col .card{
        padding: 25px 35px
    }

    .box-logo img {
        border-radius: 5px;
        margin: 0 0 25px 0;
    }

    ul {
        padding: 0;
    }

    aside {
        position: sticky;
        top: 120px;
        left: 0;
    }

    .analise img,
    .analise iframe {
        border-radius: 5px;
    }

    .iconesResumo {
        width: 24px;
        height: 24px;
        margin: 0 .2rem
    }

    .largura {
        width: 42px !important;
    }

    .iconeButton {
        width: 15px;
    }

    .ms-1 {
        font-weight: 700;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    @media(max-width: 1200px) {
        iframe{
            height: 340px;
        }
    }

    @media(max-width: 992px) {
        #content {
            flex-wrap: wrap;
        }

        #content aside {
            width: 100%;
            position: unset !important;
            margin: 1rem 0;
        }

        #content div {
            width: 100%;
        }

        aside .card {
            width: 100% !important;
        }

        aside .card .box-logo img {
            width: 70%;
        }

        aside .card-body {
            justify-content: space-between;
            align-items: stretch;
        }
    }

    @media(max-width: 575px) {
        #content {
            margin-top: 6.5rem
        }

        .resumo {
            padding: 0 !important;
        }

        .row {
            display: flex;
            justify-content: center;
            --bs-gutter-x: 0;
        }

        .row .col-sm {
            justify-content: center !important;
        }
    }

    @media(max-width: 768px) {
        iframe{
            width: 100%;
            height: 250px;
        }

        aside .card .box-logo img {
            width: 50%;
        }

        .logoLista {
            flex-direction: column;
        }
    }

    @media(max-width: 500px) {
        iframe{
            height: 180px;
        }
    }

    @media(max-width: 425px){
        .mais18 {
            margin: 0;
            padding: 1rem 0;
        }

        .mais18,
        .tagline-aposte {
            display: block;
        }
    }

    @media(max-width: 375px) {
        iframe{
            height: 140px;
        }
    }

</style>

<div class="container my-5">
    {{#cassino}}
        <div class="row d-flex align-items-start" id="content">

            {{!-- Menu ao lado --}}
            <aside class="col-sm-3 mt-sm-5">
                <div class="card">
                    <div class="card-body d-flex align-itens-center flex-column">
                        <div class="d-flex d-lg-inline logoLista">
                            <div class="box-logo d-flex justify-content-center">
                                <img src="https://storage.googleapis.com/uploads-node/{{imgCassino}}" width="150px" class="align-center">
                            </div>
                            <div>
                                <ul id="listaTopico">
                                    <li><img src="../img/check.svg" alt="" class="checkIcon" width="20px"><span class="mb-0 px-2">{{adjCassino1}}</span></li>
                                    <li><img src="../img/check.svg" alt="" class="checkIcon" width="20px"><span class="mb-0 px-2">{{adjCassino2}}</span></li>
                                    <li><img src="../img/check.svg" alt="" class="checkIcon" width="20px"><span class="mb-0 px-2">{{adjCassino3}}</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="btn-abrir">
                            <a href="{{linkCassino}}" target="_blank"> <button class="btn btn-success">abrir {{nomeCassino}} ></button> </a>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    {{{topicoAnalise}}}
                </div>
            </aside>

            {{!-- Conteúdo --}}
            <div class="col-sm-9 mt-sm-5" >
                <div class="card" id="direita">
                    <div class="card-body analise">

                        {{!-- BANNER PARA TÍTULO --}}
