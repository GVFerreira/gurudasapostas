<main>
    <section class="container">
        <div class="card">
            {{#each errors}}
                <div class="alert alert-danger">{{text}}</div>
            {{else}}
            {{/each}}
            <div class="card-header">
                <h1>Editando o usuário</h1>
            </div>
            <article class="card-body">
                <form action="/admin/editandoUsuario" method="POST">
                    <input type="hidden" name="id" id="id" value="{{user._id}}">

                    <label for="name">Nome: <span class="vermelho">*</span></label>
                    <input type="text" name="name" id="name" value="{{user.name}}" class="form-control mb-4" required autofocus>

                    <label for="email">E-mail: <span class="vermelho">*</span></label>
                    <input type="email" name="email" id="email" value="{{user.email}}" class="form-control mb-4" required>

                    <label for="password">Senha: <span class="vermelho">*</span></label>
                    <input type="password" name="password" id="password" placeholder="No minímo 4 caracteres" class="form-control mb-4" required>

                    <label for="password2">Confirme a senha: <span class="vermelho">*</span></label>
                    <input type="password" name="password2" id="password2" placeholder="Digite sua senha novamente" class="form-control mb-4" required>

                    <input type="submit" value="Editar" class="btn btn-primary">
                </form>
            </article>
        </div>
    </section>
</main>